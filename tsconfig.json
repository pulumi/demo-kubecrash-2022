{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strict": true,
    "incremental": true,
    "allowJs": true,
    "outDir": "dist",
    "declaration": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental"
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}
